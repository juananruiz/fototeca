{% extends "admin/layout_dashboard.html.twig" %}
{% set active = 'user' %}
{% set title = 'Users List'|trans %}

{% block content %}
    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                <h3>{{ title }}</h3>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group mr-2">
                        <button class="btn btn-sm btn-outline-secondary"><a href="{{ path('admin_user_add') }}"><span
                                        data-feather="plus-circle"></span> {{ "User Add"|trans }}</a></button>
                        <button class="btn btn-sm btn-outline-secondary">Export</button>
                    </div>
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
                        <span data-feather="calendar"></span>
                        This week
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>{{ "ID"|trans }}</th>
                    <th>{{ "Name"|trans }}</th>
                    <th>{{ "Email"|trans }}</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                {% for user in users %}
                    <tr>
                        <td><a class="badge badge-primary" href="{{ path('admin_user_edit', {'id': user.id}) }}" >{{ user.id }}</a></td>
                        <td><a href="{{ path('admin_user_edit', {'id': user.id}) }}">{{ user.firstName }} {{ user.lastName }}</a></td>
                        <td>{{ user.email }}</td>
                        <td><a class="text-danger" href="{{ path('admin_user_delete', {'id': user.id}) }}"><span
                                        data-feather="trash"></span></a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">{{ 'No users yet'|trans }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
