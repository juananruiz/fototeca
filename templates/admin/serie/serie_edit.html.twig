{% extends "admin/layout_dashboard.html.twig" %}
{% set title = 'Edit Serie'|trans %}
{% set active = 'series' %}

{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <h2>{{ title }}</h2>

            <form action="{{ path('admin_serie_save') }}" method="post">
                <input class="hidden" name="id" value="{{ serie.id }}">

                <div class="form-group">
                    <label for="name">{{ 'Name'|trans }}</label>
                    <input class="form-control" type="text" name="name" value="{{ serie.name }}">
                </div>
                <div class="form-group">
                    <label for="description">{{ 'Description'|trans }}</label>
                    <input class="form-control" type="text" name="description" value="{{ serie.description }}">
                </div>
                <div class="form-group">
                    <label for="isJewel">{{ 'Is Jewel'|trans }}</label>
                    <input class="form-control" type="text" name="isJewel" value="{{ serie.isJewel }}">
                </div>

                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                <button type="reset" class="btn btn-danger">{{ 'Cancel'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}