{% extends "layout_admin.html.twig" %}
{% set title = 'Edit Author'|trans %}
{% set active = 'authors' %}

{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <h2>{{ title }}</h2>

            <form action="{{ path('author_save') }}" method="post">
                <input class="hidden" name="id" value="{{ author.id }}">

                <div class="form-group">
                    <label for="firstName">{{ 'First Name'|trans }}</label>
                    <input class="form-control" type="text" name="firstName" value="{{ author.firstName }}">
                </div>
                <div class="form-group">
                    <label for="lastName">{{ 'Last Name'|trans }}</label>
                    <input class="form-control" type="text" name="lastName" value="{{ author.lastName }}">
                </div>
                <div class="form-group">
                    <label for="countryId">{{ 'Country'|trans }}</label>
                    <select class="form-control" name="countryId">
                        <option value="">{{ 'Select a country'|trans }}</option>
                        {% for country in countries %}
                            <option value="{{ country.id }}"{% if author.country.id is defined and
                            author.country.id == country.id %} selected{% endif %}>{{ country.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="jobId">{{ 'Job'|trans }}</label>
                    <select class="form-control" name="jobId">
                        <option value="">{{ 'Select a job'|trans }}</option>
                        {% for job in jobs %}
                            <option value="{{ job.id }}"{% if author.job.id is defined and
                            author.job.id == job.id %} selected{% endif %}>{{ job.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="birthDate">{{ 'Birth Date'|trans }}</label>
                    <input class="form-control" type="text" name="birthDate"
                           value="{{ author.birthDate|date('d/m/Y') }}">
                </div>
                <div class="form-group has-feedback">
                    <label for="deathDate">{{ 'Death Date'|trans }}</label>

                    <div class="input-group date" data-provide="datepicker" data-date-language="es"
                         data-date-autoclose="true">
                        <div class="input-group-addon"><i class="fa fa-calendar fa-fw"></i></div>
                        <input type='text' value="{{ author.deathDate|date('d/m/Y') }}" class="form-control"
                               name='deathDate' id='deathDate' data-validar_fecha="validar_fecha" required/>
                    </div>
                    <span class="glyphicon form-control-feedback" aria-hidden="true"></span>

                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group">
                    <label for="comments">{{ 'Comments'|trans }}</label>
                    <textarea class="form-control" name="comments">{{ author.comments }}</textarea>
                </div>

                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                <button type="reset" class="btn btn-danger">{{ 'Cancel'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="lib/bootstrap-datepicker/locales/bootstrap-datepicker.es.min.js"></script>
{% endblock %}
