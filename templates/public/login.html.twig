{% extends 'public/layout.html.twig' %}
{% set title = 'Login'|trans %}
{% set active = '' %}

{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="space-30"></div>
    <div class="blocks-main">
        <div class="container">
            <div class="col-md-6">
                <div class="sky-form-login">
                    <form action="{{ path('login') }}" method="post" id="sky-form" class="sky-form"
                          novalidate="novalidate">
                        <h3 class="text-left"><i class="fa fa-unlock"></i>{{ 'Log in to your account'|trans }}</h3>
                        {# If you want to control the URL the user is redirected to on success #}
                        <input type="hidden" name="_target_path" value="/intranet"/>
                        <fieldset>
                            <section>
                                <div class="row">
                                    <label class="label col col-4">{{ 'User'|trans }}</label>
                                    <div class="col col-8">
                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            <input type="email" name="_username" value="{{ last_username }}">
                                        </label>
                                    </div>
                                </div>
                            </section>

                            <section>
                                <div class="row">
                                    <label class="label col col-4">{{ 'Password'|trans }}</label>
                                    <div class="col col-8">
                                        <label class="input">
                                            <i class="icon-append fa fa-lock"></i>
                                            <input type="password" name="_password">
                                        </label>
                                        <div class="note"><a href="#sky-form2"
                                                             class="modal-opener">{{ 'Forgot password?'|trans }}</a>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </fieldset>

                        <footer class="text-right">
                            <button type="submit" class="btn btn-lg btn-skin">{{ 'Log in'|trans }}</button>
                        </footer>
                    </form>

                    <!--password recovery form start-->
                    <form action="#" id="sky-form2" class="sky-form sky-form-modal" novalidate="novalidate">
                        <header>{{ 'Password recovery'|trans }}</header>
                        <fieldset>
                            <section>
                                <label class="label">{{ 'Email'|trans }}</label>
                                <label class="input">
                                    <i class="icon-append fa fa-envelope-o"></i>
                                    <input type="email" name="email" id="email">
                                </label>
                            </section>
                        </fieldset>

                        <footer>
                            <button type="submit" name="submit" class="button">{{ 'Submit'|trans }}</button>
                            <a href="#" class="button button-secondary modal-closer">{{ 'Close'|trans }}</a>
                        </footer>

                        <div class="message">
                            <i class="fa fa-check"></i>
                            <p>{{ 'Your request successfully sent!'|trans }}<br><a href="#"
                                                                                   class="modal-closer">{{ 'Close window'|trans }}</a>
                            </p>
                        </div>
                    </form>
                    <!--password-recovery form end-->
                </div>
            </div>
            <div class="col-md-6">
                <div class="login-register-aside-box">
                    <h3>Solicitar cuenta</h3>
                    <p>
                        Nam libero tempore, cum soluta nobis est eligendi optio cumque nihil impedit quo minus id quod
                        maxime placeat facere possimusNam libero tempore, cum soluta nobis est eligendi optio cumque
                        nihil impedit quo minus id quod maxime placeat facere possimus.
                    </p>
                    <br>
                    <a href="#" class="btn btn-light-dark btn-lg">Register Now</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block css %}
    <link href="assets/css/sky-forms.css" rel="stylesheet">
    {{ parent() }}
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="assets/js/jquery.form.min.js" type="text/javascript"></script>
    <script src="assets/js/jquery.modal.js" type="text/javascript"></script>
{% endblock %}
